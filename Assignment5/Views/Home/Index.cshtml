@{
    ViewData["Title"] = "My Books";
}

@model BookListViewModel

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>


<script>
    $(document).ready(function(){
    $('[data-toggle="tooltip"]').tooltip();
    });
</script>

<div class="text-center">
    <h1 class="display-4">Check Out My Books</h1>
    <br />
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Author
            </th>
            <th>
                Publisher
            </th>
            <th>
                ISBN
            </th>
            <th>
                Genre
            </th>
            <th>
                Category
            </th>
            <th>
                Price
            </th>
            <th>
                Pages
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var x in Model.Books)
        {
            <partial name="BookSummary" model="x" />
        }
    </tbody>
</table>

<!-- Create a Previous and Next button through-->
<div class="text-center">
    <a style="display: inline;" class="pager" href="../"><< Previous</a>
    <div style="display: inline;" page-model="@Model.PagingInfo" page-action="Index">
        page-url-category="@Model.CurrentCategory"
    </div>
    <a style="display: inline;" class="pager" href="/Books/P2">Next >></a>
</div>

<br />
<br />

<!--Create a secrete hidden message through BS-->
<div class="container">
    <h3>Click to view a secret message hidden through Bootstrap</h3>
    <br />
    <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#demo">Secret Message</button>
    <div id="demo" class="collapse">
        <br />
        <br />
        <p>Dr. Hilton + our TA's = solid combo</p>
    </div>
</div>

